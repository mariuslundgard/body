{
  "extends": "../../../tsconfig.settings.json",
  "include": ["./src", "./typings"],
  "exclude": [
    "./src/**/__fixtures__/*",
    "./src/**/__mocks__/*",
    "./src/**/__workshop__/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./test"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "./lib/ts/",
    "declarationDir": "./lib/",
    "jsx": "react-jsx",

    /**
     * NOTE: these are only here to avoid errors when running `microbundle`
     * @see https://github.com/developit/microbundle/issues/857#issuecomment-884939726
     */
    "jsxFactory": "",
    "jsxFragmentFactory": ""
  }
}
